{
  "realm": "dev",
  "enabled": true,
  "clients": [
    {
      "clientId": "customers-api",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "secret",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": [
        "http://localhost:8080/*"
      ],
      "defaultClientScopes": [
        "profile",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone"
      ],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8080/*"
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "customers:read",
        "description": "Permite leitura de clientes"
      },
      {
        "name": "customers:write",
        "description": "Permite criação e atualização de clientes"
      }
    ]
  }
}
